@model Sao.Models.Alumnos

@{
    ViewBag.Title = "Login";
}

<h2>Login</h2>

<h3>Ingresa tu DNI y tu contraseña para acceder al sistema. Recuerda que podrás entrar al sistema dentro de las próximas 24 horas.</h3>
    @using (Html.BeginForm()) {
    <fieldset>
        <legend>Ingresar</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.DNI)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.DNI)
            @Html.ValidationMessageFor(model => model.DNI)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Clave)
        </div>
        <div class="editor-field">
            @Html.PasswordFor(model => model.Clave)
            @Html.ValidationMessageFor(model => model.Clave)
        </div>

        <p>
            <input type="submit" value="Ingresar" />
        </p>
    </fieldset>
}

